{
  "name": "messai-ai",
  "version": "1.0.0",
  "description": "Microbial Electrochemical Systems AI Platform",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --all",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "type-check": "tsc --noEmit -p tsconfig.base.json",
    "type-check:watch": "tsc --noEmit -p tsconfig.base.json --watch",
    "type-check:prod": "pnpm db:generate && tsc --noEmit -p tsconfig.base.json",
    "build:prod": "pnpm db:generate && cd apps/web && pnpm run build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,html,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,html,yml,yaml}\"",
    "clean": "nx run-many --target=clean --all",
    "affected:test": "nx affected:test",
    "affected:build": "nx affected:build",
    "affected:lint": "nx affected:lint",
    "graph": "nx graph",
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:push": "dotenv -e .env -- prisma db push",
    "db:migrate": "dotenv -e .env -- prisma migrate dev",
    "db:migrate:prod": "dotenv -e .env -- prisma migrate deploy",
    "db:studio": "dotenv -e .env -- prisma studio",
    "db:test": "node scripts/test-db-connection.js",
    "db:local:start": "docker compose -f docker-compose.postgres.yml up -d",
    "db:local:stop": "docker compose -f docker-compose.postgres.yml down",
    "db:local:restart": "pnpm db:local:stop && pnpm db:local:start",
    "db:local:reset": "docker compose -f docker-compose.postgres.yml down -v && pnpm db:local:start",
    "db:local:logs": "docker compose -f docker-compose.postgres.yml logs -f postgres",
    "db:local:shell": "docker exec -it messai-postgres-dev psql -U messai -d messai_dev",
    "db:setup:local": "cp .env.development.local .env.local && pnpm db:local:start && sleep 10 && pnpm db:push",
    "db:backup": "node scripts/backup/create-backup.js",
    "db:backup:prisma": "node scripts/backup/prisma-backup.js",
    "db:restore": "node scripts/backup/restore-backup.js",
    "db:backup:verify": "node scripts/backup/verify-backup.js",
    "debug:env": "node scripts/debug-environment.js",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:papers": "tsx scripts/seed-research-papers.ts",
    "db:add:insilico": "dotenv -e .env -- tsx scripts/add-in-silico-papers.ts",
    "schema:validate": "node scripts/validate-schema.js",
    "schema:diff": "tsx scripts/compare-schemas.ts",
    "audit": "pnpm audit --audit-level=moderate",
    "audit:fix": "pnpm audit fix",
    "security:check": "pnpm audit && pnpm outdated",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --interactive --latest",
    "algae-research": "nx run feature-research-agents:algae-research",
    "algae-research:mess": "nx run feature-research-agents:algae-research -- --mess-only",
    "algae-research:expand": "nx run feature-research-agents:algae-research -- --expand-only",
    "algae-research:integrated": "nx run feature-research-agents:algae-research:integrated",
    "nighttime:all": "dotenv -e .env -- node scripts/nighttime-automation.js all",
    "nighttime:backup": "dotenv -e .env -- node scripts/nighttime-automation.js backup",
    "nighttime:maintenance": "dotenv -e .env -- node scripts/nighttime-automation.js maintenance",
    "nighttime:data": "dotenv -e .env -- node scripts/nighttime-automation.js data",
    "nighttime:performance": "dotenv -e .env -- node scripts/nighttime-automation.js performance",
    "deps:advanced": "dotenv -e .env -- node scripts/advanced-dependency-management.js",
    "prepare": "if [ \"$CI\" != \"true\" ] && [ \"$VERCEL\" != \"1\" ]; then husky install; fi"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@react-three/drei": "^10.5.1",
    "@react-three/fiber": "^9.2.0",
    "@types/three": "^0.178.1",
    "dotenv": "^17.2.0",
    "next": "~15.4.1",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@next/eslint-plugin-next": "^15.4.1",
    "@nx/devkit": "21.2.4",
    "@nx/eslint": "21.2.4",
    "@nx/eslint-plugin": "21.2.4",
    "@nx/jest": "21.2.4",
    "@nx/js": "21.2.4",
    "@nx/next": "21.2.4",
    "@nx/playwright": "21.2.4",
    "@nx/workspace": "21.2.4",
    "@playwright/test": "^1.54.1",
    "@prisma/client": "^6.12.0",
    "@swc-node/register": "~1.10.10",
    "@swc/cli": "~0.7.8",
    "@swc/core": "~1.13.0",
    "@swc/helpers": "~0.5.17",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "24.0.14",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "10.4.21",
    "babel-jest": "^30.0.4",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.6",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.4.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nx": "21.2.4",
    "postcss": "8.5.6",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "sass": "^1.89.2",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
