# Environment variables for MESSAI.AI Platform
# Copy this file to .env.local and fill in the values

# Node Environment
NODE_ENV=development

# Database Configuration
# PostgreSQL is used for both local and production environments

# For local development (Docker PostgreSQL):
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/messai_dev

# For production (Hosted PostgreSQL):
# DATABASE_URL=postgresql://user:password@host:5432/messai_prod

# Force PostgreSQL in development (optional)
# FORCE_POSTGRES=true

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# External APIs
PUBMED_API_KEY=
CROSSREF_API_KEY=
IEEE_XPLORE_API_KEY=

# AI/ML Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# File Storage (S3 compatible)
STORAGE_ENDPOINT=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=messai-dev

# Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@messai.ai

# Monitoring & Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_3D_VISUALIZATION=true
ENABLE_AI_PREDICTIONS=true
ENABLE_COLLABORATION=true
ENABLE_EXPERIMENTS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json