{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://messai.io/schemas/parameter.schema.json",
  "title": "MESS Parameter Schema",
  "description": "JSON Schema for validating MESS (Microbial Electrochemical Systems) parameters",
  "definitions": {
    "parameter": {
      "type": "object",
      "required": ["id", "name", "type", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-_]+$",
          "description": "Unique parameter identifier using lowercase and hyphens"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable parameter name"
        },
        "unit": {
          "type": "string",
          "description": "SI unit or dimensionless"
        },
        "type": {
          "type": "string",
          "enum": ["number", "string", "boolean", "select", "array", "object"],
          "description": "Parameter data type"
        },
        "range": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          },
          "additionalProperties": false,
          "description": "Valid range for numeric parameters"
        },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Valid options for select type parameters"
        },
        "default": {
          "description": "Default or typical value"
        },
        "description": {
          "type": "string",
          "description": "Detailed parameter description"
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Related parameter IDs"
        },
        "references": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Scientific references"
        },
        "validation_rules": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Validation rules for the parameter"
        },
        "typical_range": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          },
          "additionalProperties": false,
          "description": "Typical operating range"
        },
        "outlier_threshold": {
          "type": "number",
          "description": "Threshold for outlier detection"
        },
        "compatibility": {
          "type": "object",
          "properties": {
            "materials": {
              "type": "array",
              "items": { "type": "string" }
            },
            "microbes": {
              "type": "array",
              "items": { "type": "string" }
            },
            "environments": {
              "type": "array",
              "items": { "type": "string" }
            },
            "systemTypes": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false,
          "description": "Compatibility constraints"
        },
        "properties": {
          "type": "object",
          "description": "Properties for object type parameters"
        },
        "pattern": {
          "type": "string",
          "description": "Regex pattern for string validation"
        }
      },
      "additionalProperties": false
    },
    "subcategory": {
      "type": "object",
      "required": ["id", "name", "parameters"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "electrodeType": {
          "type": "string",
          "enum": ["anode", "cathode", "both"],
          "description": "Electrode type for electrode-specific subcategories"
        },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/parameter" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "category": {
      "type": "object",
      "required": ["id", "name", "description", "subcategories"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "icon": {
          "type": "string",
          "description": "Emoji or icon identifier"
        },
        "description": {
          "type": "string"
        },
        "subcategories": {
          "type": "array",
          "items": { "$ref": "#/definitions/subcategory" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "required": [
    "metadata",
    "categories",
    "validation_rules",
    "compatibility_matrices",
    "integration_mapping"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "version",
        "lastUpdated",
        "totalParameters",
        "majorCategories",
        "subcategories",
        "sources"
      ],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date"
        },
        "totalParameters": {
          "type": "integer",
          "minimum": 0
        },
        "majorCategories": {
          "type": "integer",
          "minimum": 0
        },
        "subcategories": {
          "type": "integer",
          "minimum": 0
        },
        "sources": {
          "type": "object",
          "required": ["library", "json", "validation", "integration"],
          "properties": {
            "library": { "type": "string" },
            "json": { "type": "string" },
            "validation": { "type": "string" },
            "integration": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },
    "categories": {
      "type": "array",
      "items": { "$ref": "#/definitions/category" },
      "minItems": 1
    },
    "validation_rules": {
      "type": "object",
      "description": "Parameter validation rules by category"
    },
    "compatibility_matrices": {
      "type": "object",
      "description": "Material, microbe, and environment compatibility rules"
    },
    "integration_mapping": {
      "type": "object",
      "description": "Database field mappings and extraction patterns"
    }
  },
  "additionalProperties": false
}
